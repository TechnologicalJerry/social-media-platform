# Server Configuration
PORT=5050
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/social-media-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-development/production
JWT_EXPIRE=7d

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@socialmediaplatform.com

# Frontend URLs (comma-separated for multiple frontends)
# Angular: http://localhost:4200
# React/Next.js: http://localhost:3000
# Vue: http://localhost:5173
FRONTEND_URLS=http://localhost:4200,http://localhost:3000,http://localhost:5173

# Default Frontend URL (for password reset links - you can change this)
FRONTEND_URL=http://localhost:3000
